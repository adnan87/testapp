<%- model_class = Interview -%>
<%= stylesheet_link_tag    "responsive_table", :media => "all" %>
<div class="page-header">
	<% if params[:status] %>
	<h1><%= t '.title', :default => model_class.model_name.human.pluralize %> - <%= params[:status] %></h1>
	<% else %>
	
	<h1>Interviews - Requested </h1>
	<% end %>
</div>
<div class="row-fluid" >

	<div class="span2">
		<ul>
	   		<li class="dropdown" style="list-style:none;">
    	<a class="dropdown-toggle"  data-toggle="dropdown" href="#" style="text-decoration: none;">
    		<i class="icon-filter"></i>Sort By <b class="caret"></b></a>

    	<ul class="dropdown-menu" \>
	      <li>
				<%= link_to raw("<i class='icon-calendar'></i> Date Requested"), sort_interviews_interviews_path(:sortby => "Date Requested"), :remote=>true%>
			</li>
	      <li>
				<%= link_to raw("<i class='icon-user'></i> Employer"), sort_interviews_interviews_path(:sortby => "Employer"), :remote=>true%>
		  </li>
		  <li>
				<%= link_to raw("<i class='icon-user'></i> Candidate"), sort_interviews_interviews_path(:sortby => "Candidate"), :remote=>true%>
		  </li>
		  <li>
				<%= link_to raw("<i class='icon-exclamation-sign'></i> Status"), sort_interviews_interviews_path(:sortby => "Status"), :remote=>true%>
		  </li>
		  <li>
				<%= link_to raw("<i class='icon-file'></i> Candidate Response"), sort_interviews_interviews_path(:sortby => "Candidate Response"), :remote=>true%>
		  </li>
    	</ul>
        </li>	
	   	</ul>
	</div>
	<div class="span3"><p>Sorted By: <b class="sort"></b></p></div>
	<div class="span7" style="text-align: right">
		<ul class="inline">
			<li>
				View :
			</li>
			<li>
				<%= link_to "Admin Requested", interviews_url(:status => "Requested"), :class => "badge badge-important"%>
			</li>
			<li>
				<%= link_to "Admin Approved", interviews_url(:status => "Approved"), :class => "badge badge-success"%>
			</li>
			<li>
				<%= link_to "Admin Declined", interviews_url(:status => "Declined"), :class => "badge badge-warning"%>
			</li>
		</ul>
	</div>
</div>
<div class="row-fluid">
   <div id="data-index">
      <%= render :partial => "list" -%> 
    </div>
</div>
<script>
$(document).ready(function(){
	$('.span3 p').hide();
	$('.dropdown-menu li a').click(function(){ 
		$('.span3 p').show();
		$('.sort').html($(this).text());
		$('li').removeClass('open');
	})
})
</script>

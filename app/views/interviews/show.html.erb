<%- model_class = Interview -%>
<div class="page-header">
	<h2>Review Interview Request Status - <%= @interview.status %></h2>
</div>
<!--<%= form_for @interview, :url => { :action => :processinterview }, :html => { :class => 'form-horizontal' } do |f| %> -->
<%= form_tag('/interviews/processinterview') %>
<div class="row-fluid">
	<div class="span4">
		<ul class="unstyled">
			<li>
				<%= image_tag @candidate.background_image, :width => "125px" %>
			</li>
			<% if @interview.candidate_status != "" %>
			<li>
				<strong>Candidate Status</strong>
			</li>
			<li>
				<%= @interview.candidate_status %> on <%= @interview.candidate_status_changed_on %>
			</li>
			<% end%>
		</ul>
	</div>
	<div class="span4">
		<ul class="unstyled">
			<li>
				<strong><%= model_class.human_attribute_name(:email) %>:</strong>
			</li>
			<li>
				<%= @candidate.email %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:name) %>:</strong>
			</li>
			<li>
				<%= @candidate.name %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:phone) %>:</strong>
			</li>
			<li>
				<%= @candidate.phone %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:linkedin_url) %>:</strong>
			</li>
			<li>
				<%= @candidate.linkedin_url %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:other_url) %>:</strong>
			</li>
			<li>
				<%= @candidate.other_url %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:resume) %>:</strong>
			</li>
			<li>
				<%= @candidate.resume.to_s.html_safe %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:resume_file) %>:</strong>
			</li>
			<li>
				<%= @candidate.resume_file %>
			</li>

			<li>
				<strong><%= model_class.human_attribute_name(:availability_status) %>:</strong>
			</li>
			<li>
				<%= @candidate.availability_status %>
			</li>

		</ul>
	</div>
	<div class="span4">
		<ul class="unstyled">
			<li>
				<strong><%= model_class.human_attribute_name(:email) %>:</strong>
			</li>
			<li>
				<%= @employer.email %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:name) %>:</strong>
			</li>
			<li>
				<%= @employer.name %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:phone) %>:</strong>
			</li>
			<li>
				<%= @employer.phone %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:about) %>:</strong>
			</li>
			<li>
				<%= text_area_tag 'about', @employer.about.to_s.html_safe %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:website) %>:</strong>
			</li>
			<li>
				<%= @employer.website %>
			</li>
			<li>
				<strong>Pitch:</strong>
			</li>
			<li>
				<%= text_area_tag 'pitch', @interview.employer_pitch.to_s.html_safe %>
			</li>
		</ul>
	</div>
</div>

<div class="row-fluid">
	<%= hidden_field_tag 'id',  @interview.id %>
	<ul class="inline" style="text-align: center">
		<% if @interview.status == "Requested" %>
		<li>
			<%= f.submit 'Approve' %>
    
			<!--<%= button_to "Approve", :action => "approve_request", :id => @interview.id %>-->
		</li>
		<li>
			<%= f.submit 'Decline' %>
			<!--<%= button_to "Decline", :action => "decline_request", :id => @interview.id %>-->
		</li>
		<% end %>
		<li>
			<%= link_to "Back", interviews_path, :class => "btn" %>
		</li>
	</ul>
</div>
<% end %>

<%- model_class = Interview -%>
<div class="page-header">
	<h2>Review Interview Request</h2>
</div>
<div class="row-fluid">
	<div class="span4">
		<ul class="unstyled">
			<li>
				<%= image_tag @candidate.background_image, :width => "125px" %>
			</li>
		</ul>
	</div>
	
	<div class="span6">
		<ul class="unstyled">
			<li>
				<strong><%= model_class.human_attribute_name(:name) %>:</strong>
			</li>
			<li>
				<%= @employer.name %>
			</li>
			<li>
				<strong><%= model_class.human_attribute_name(:about) %>:</strong>
			</li>
			<li>
				<%= @employer.about.to_s.html_safe %>
			</li>
			<li>
			<li>
				<strong>Pitch:</strong>
			</li>
			<li>
				<%= @interview.employer_pitch.to_s.html_safe %>
			</li>
		</ul>
	</div>
</div>

<div class="row-fluid">
	<ul class="inline" style="text-align: center">
		<% if @interview.candidate_status == "Requested" %>
		<li>
			<%= button_to "Accept", :action => "accept_interview_request", :id => @interview.id %>
		</li>
		<li>
			<%= button_to "Decline", :action => "decline_interview_request", :id => @interview.id %>
		</li>
		<% end %>

	</ul>
</div>


<%- model_class = Candidate -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row-fluid">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong><%= model_class.human_attribute_name(:email) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @candidate.email %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:name) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @candidate.name %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:phone) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @candidate.phone %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:linkedin_url) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @candidate.linkedin_url %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:other_url) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @candidate.other_url %>
			</dd>
		</dl>
	</div>
	<div class="span6">
		<dl class="dl-horizontal">

			<dt>
				<strong><%= model_class.human_attribute_name(:resume) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @candidate.resume.to_s.html_safe %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:resume_file) %>:</strong>
			</dt>
			<dd>
				&nbsp;	<% if @candidate.resume_file.present? %>
				<%= link_to 'Download', @candidate.resume_file.url, target: "_blank" %>
				<% end %>
			</dd>
		</dl>

	</div>
</div>
<div class="row-fluid">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong><%= model_class.human_attribute_name(:availability_status) %>:</strong>
			</dt>
			<dd>
				<%= @candidate.availability_status %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:background_image) %>:</strong>
			</dt>
			<dd>
				<%= image_tag @candidate.background_image, :width => "50%" %>
			</dd>
		</dl>
	</div>
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong><%= model_class.human_attribute_name(:candidate_pitch) %>:</strong>
			</dt>
			<dd>
				<%= @candidate.candidate_pitch %>
			</dd>
		</dl>
	</div>
</div>

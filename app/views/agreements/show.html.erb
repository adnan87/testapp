<%- model_class = Agreement -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row-fluid">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong><%= model_class.human_attribute_name(:title) %>:</strong>
			</dt>
			<dd>
				<%= @agreement.title %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:content) %>:</strong>
			</dt>
			<dd>
				<%= @agreement.content %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:version) %>:</strong>
			</dt>
			<dd>
				<%= @agreement.version %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:isactive) %>:</strong>
			</dt>
			<dd>
				<%= @agreement.isactive %>
			</dd>
		</dl>
	</div>
</div>
<div class="form-actions">
	<p style="text-align: center">
	<%= link_to t('.back', :default => t("helpers.links.back")),
	agreements_path, :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_agreement_path(@agreement), :class => 'btn' %>
	</p>
</div>

<%- model_class = Employerdomain -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row-fluid">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong><%= model_class.human_attribute_name(:employer_domain) %>:</strong>
			</dt>
			<dd>
				<%= @employerdomain.employer_domain %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:status) %>:</strong>
			</dt>
			<dd>
				<%= @employerdomain.status %>
			</dd>
		</dl>
	</div>
</div>
<div class="form-actions">
	<p style="text-align: center">
	<%= link_to t('.back', :default => t("helpers.links.back")),
	employerdomains_path, :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_employerdomain_path(@employerdomain), :class => 'btn' %>
	</p>
</div>

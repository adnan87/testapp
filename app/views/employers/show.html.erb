<%- model_class = Employer -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row-fluid">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong><%= model_class.human_attribute_name(:email) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @employer.email %>
			</dd>
			<dt>
				<strong>Company Name:</strong>
			</dt>
			<dd>
				&nbsp;<%= @employer.companyname %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:name) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @employer.name %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:phone) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @employer.phone %>
			</dd>
		</dl>
	</div>
	<div class="span6">
		<dl class="dl-horizontal">

			<dt>
				<strong><%= model_class.human_attribute_name(:about) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= @employer.about.to_s.html_safe %>
			</dd>
			<dt>
				<strong><%= model_class.human_attribute_name(:website) %>:</strong>
			</dt>
			<dd>
				&nbsp;<%= link_to @employer.website, @employer.website, :target => "_blank"%>
				
			</dd>
			
		
		</dl>

	</div>
</div>
<div class="row-fluid">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>
				<strong>Job Titles:</strong>
			</dt>
			<dd>
				
				<% @employer.job_titles.all.each do |jobtitle| %>
				<span class="badge"><%= jobtitle.name %> </span>
				<% end %>
			</dd>
		</dl>
	</div>
	<div class="span6">
		<dl class="dl-horizontal">
				<dt>
				<strong>Job Skills</strong>
			</dt>
			<dd>
				
				<% @employer.skills.all.each do |skill| %>
				<span class="badge badge-inverse"><%= skill.name %> </span>
				<% end %>
			</dd>
			
		</dl>
	</div>
</div>
<div class="form-actions">
	<p style="text-align: center">
	<%= link_to t('.back', :default => t("helpers.links.back")),
	employers_path, :class => 'btn'  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_employer_path(@employer), :class => 'btn' %>
	</p>
</div>

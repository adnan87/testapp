				})

				$('#myModalInterviewApplication').on('show', function() {
					iInterviewPopup = true;
				})
				$('#myModalInterviewApplication').on('hidden', function() {
					// do something…
					iInterviewPopup = false;
					if ($('#divInterviewApplicationThankYou').css('display') == 'none') {
						$("#myModalCandidate").modal();

					} else {
						$("#divInterviewApplicationThankYou").hide();
						goToByScroll("secUserIdentity_" + $("#candidate_id").val());
					}
				})


				function goToByScroll(id) {
					// Remove "link" from the ID
					id = id.replace("link", "");
					// Scroll
					$('html,body').animate({
						scrollTop : $("#" + id).offset().top
					}, 'slow');
				}
				
				$('a[id^="lnkRequestInterview"]').click(function() {
